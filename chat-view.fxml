<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.myjavafx.ChatController"
            prefHeight="450.0" prefWidth="600.0" styleClass="root"> <!-- Apply root style from CSS -->

    <!-- Top Section: Header/Title -->
    <top>
        <VBox alignment="CENTER" spacing="10.0" styleClass="header-box">
            <Label text="JavaFX Chat" textFill="white">
                <font>
                    <Font name="System Bold" size="24.0" />
                </font>
            </Label>
            <Button fx:id="connectButton" text="Connect" onAction="#onConnectDisconnect"
                    styleClass="connect-button"/>
        </VBox>
    </top>

    <!-- Center Section: Message Display Area -->
    <center>
        <ListView fx:id="messageListView" VBox.vgrow="ALWAYS"
                  styleClass="message-list-view">
            <VBox.margin>
                <Insets left="10.0" right="10.0" top="10.0" bottom="10.0"/>
            </VBox.margin>
            <padding>
                <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
            </padding>
        </ListView>
    </center>

    <!-- Bottom Section: Message Input and Send Button -->
    <bottom>
        <HBox alignment="CENTER" spacing="10.0" styleClass="input-box">
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <TextField fx:id="messageInput" HBox.hgrow="ALWAYS" promptText="Type your message..."
                       styleClass="message-input"/>
            <Button fx:id="sendButton" text="Send" onAction="#onSendMessage"
                    styleClass="send-button"/>
        </HBox>
    </bottom>
</BorderPane>
